    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python Debugger: tests.py",
            "type": "debugpy",
            "request": "launch",
            "program": "tests.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Python Debugger: main with arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "main.py",
            "console": "integratedTerminal",
            "args": [
                "",
                "--verbose"
            ]
        }
    ]
}